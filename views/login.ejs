<!DOCTYPE html>
<html lang="en">
<%- include('layouts/head'); -%>

    <body>
        <%- include('layouts/navigation'); -%>
            <!-- Page Header-->
            <header class="masthead" style="background-image: url('assets/img/home-bg.jpg')">
                <div class="container position-relative px-4 px-lg-5">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <div class="col-md-10 col-lg-8 col-xl-7">
                            <div class="site-heading">
                                <h1>Login</h1>
                                <span class="subheading">DriveTest Booking Kiosk</span>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- Main Content-->
            <div class="container px-4 px-lg-5 mb-5">
                <% if(typeof success !='undefined' ) { %>
                    <p class="text-success">
                        <%= success %>
                    </p>
                    <% } %>
                        <div class="row gx-4 gx-lg-5 justify-content-center">
                            <div class="col-md-6 col-lg-4 col-xl-6 border">
                                <h2 class="px-4 mt-3">Sign Up</h2>
                                <form class="px-4 py-3" method="post" action="/createUser" id="signup">
                                    <div class="form-group mb-3">
                                        <label for="userName">User Name</label>
                                        <input type="text" class="form-control" id="userName" name="userName"
                                            placeholder="Please enter User Name" required>
                                    </div>
                                    <div class="form-group  mb-3">
                                        <label for="password">Password</label>
                                        <input type="password" class="form-control" id="password" name="password"
                                            placeholder="Please enter Password" required>
                                    </div>
                                    <div class="form-group  mb-3">
                                        <label for="repeatPassword">Repeat Password</label>
                                        <input type="password" class="form-control" id="repeatPassword"
                                            name="repeatPassword" placeholder="Please enter Password" required>
                                    </div>
                                    <div class="form-group  mb-3">
                                        <label for="userType">User Type</label>
                                        <select class="form-control" id="userType" name="userType"
                                            placeholder="Please select userType" required>
                                            <option value="">Please select userType</option>
                                            <option value="Driver">Driver</option>
                                            <option value="Examiner">Examiner</option>
                                            <option value="Admin">Admin</option>
                                        </select>
                                    </div>
                                    <% if(typeof signUpError !='undefined' ) { %>
                                        <p class="text-danger">
                                            <%= signUpError %>
                                        </p>
                                        <% } %>
                                            <button type="submit" class="btn btn-primary">Sign Up</button>
                                </form>
                            </div>
                            <div class="col-md-6 col-lg-4 col-xl-6 border" id="signin">
                                <h2 class="px-4 mt-3">Sign In</h2>
                                <form class="px-4 py-3" method="post" action="/getUser">
                                    <div class="form-group mb-3">
                                        <label for="userName">User Name</label>
                                        <input type="text" class="form-control" id="userName" name="userName"
                                            placeholder="Please enter User Name">
                                    </div>
                                    <div class="form-group  mb-3">
                                        <label for="password">Password</label>
                                        <input type="password" class="form-control" id="password" name="password"
                                            placeholder="Please enter Password">
                                    </div>
                                    <% if(typeof signInError !='undefined' ) { %>
                                        <p class="text-danger">
                                            <%= signInError %>
                                        </p>
                                        <% } %>
                                            <button type="submit" class="btn btn-primary">Sign in</button>
                                </form>
                            </div>
                        </div>
            </div>
            <%- include('layouts/footer'); -%>
    </body>

</html>